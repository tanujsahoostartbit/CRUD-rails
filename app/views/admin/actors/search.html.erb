<!-- if no match found -->
<% if !flash[:notice].blank? %>
	<div class="alert alert-warning">
		<strong><%= flash[:notice] %></strong>
	</div>
<% end %>

<!-- list of found matches -->
<table class="table table-striped table-bordered table-hover table-condensed">
	<% @actors.each do |actor|  %>
		<tr>
				<td><%= actor.full_name %></td>
				<td><%= link_to("Show", admin_actor_path(actor)) %></td>
				<td><%= link_to("Edit", edit_admin_actor_path(actor)) %></td>
				<td><%= link_to("Delete", delete_admin_actor_path(actor)) %></td>
		</tr>
	<% end %>
</table>