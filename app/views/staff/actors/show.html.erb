
<h4><%= @actor.full_name %> played in <%= @actor_films.count %> movies</h4>

<table class="table table-striped table-bordered table-hover table-condensed">
	<% i = 0 %>
	<% @actor_films.each do |af| %>
		<tr>
			<td><%= i += 1 %></td>
			<td><%= af.title %></td>
		</tr>
	<% end %>
</table>