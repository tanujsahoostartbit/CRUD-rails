<div class="container">
<% @customers_page = 'Customers Show Page' #refers in layout/staff.html.erb %>

<ul class="nav">
	<li><%= link_to("Back to Customers", staff_customers_path) %></li>
</ul>

<table class="table table-striped table-bordered table-hover table-condensed">
	<tr>
		<th>Customer's Name</th>
		<td><%= @customer.full_name %></td>		
	</tr>
	<tr>
		<th>Address</th>
		<td><%= @address %></td>
	</tr>
	<tr>
		<th>City</th>
		<td><%= @city %></td>
	</tr>
	<tr>
		<th>District & zip code</th>
		<td><%= @district %> <%= @zip_code %></td>
		
	</tr>
	<tr>
		<th>Country</th>
		<td><%= @country %></td>
	</tr>
</table>

</div>