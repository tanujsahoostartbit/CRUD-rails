
<h4><%= @film_category %></h4>
<h4>Following actors(resses) played in <%= @film.title %> </h4>

<table class="table table-striped table-bordered table-hover table-condensed">
	<% i = 0 %>
	<% @film_actors.each do |fa| %>
		<tr>
			<td><%= i += 1 %></td>
			<td><%= fa.full_name %></td>
		</tr>
	<% end %>
</table>